{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Peage list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numcarte</th>
                <th>Datepassage</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('peage_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numCarte }}</td>
                <td>{% if entity.datePassage %}{{ entity.datePassage|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.montant }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('peage_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('peage_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('peage_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
