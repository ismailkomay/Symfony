{% extends '::base.html.twig' %}
{% block title %}Peage|New{% endblock %}
{% block body -%}
<div class="page-header"><h1> Ajout d'un Peage</h1></div>



{{ form_start(form) }}
<div class="desactiver-champs">
<div class="row">
<span class="alert-danger ">{{ form_errors(form) }}</span>
</div>

<div class="row">

<div class="span6 offset3">

<fieldset>
<legend>Formulaire d'ajout</legend>

<div class="row-fluid">
<div class="span5">{{ form_label(form.id," Identifiant ") }}</div>
{{ form_widget(form.id) }}<span class="alert-danger ">{{ form_errors(form.id) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(form.numCarte," Num. de Carte ") }}</div>
{{ form_widget(form.numCarte) }}<span class="alert-danger ">{{ form_errors(form.numCarte) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(form.datePassage," Date de passage ") }}</div>
{{ form_widget(form.datePassage) }}<span class="alert-danger ">{{ form_errors(form.datePassage) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(form.montant," Montant ") }}</div>
{{ form_widget(form.montant) }}<span class="alert-danger ">{{ form_errors(form.montant) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(form.feuilleDeRoute," Feuille De Route ") }}</div>
{{ form_widget(form.feuilleDeRoute) }}<span class="alert-danger ">{{ form_errors(form.feuilleDeRoute) }}</span>
</div>

</fieldset>

</div>
</div>
</div>
{{ form_end(form) }}
{% endblock %}

