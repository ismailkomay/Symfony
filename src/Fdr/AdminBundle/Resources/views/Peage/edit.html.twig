{% extends '::base.html.twig' %}
{% block title %}Peage|Edit{% endblock %}
{% block body -%}
<div class="page-header"><h1> Modification d'un Peage</h1></div>



{{ form_start(edit_form) }}
<div class="row">
<span class="alert-danger ">{{ form_errors(edit_form) }}</span>
</div>

<div class="row">

<div class="span6 offset3">

<fieldset>
<legend>Formulaire de modification</legend>

<div class="row-fluid">
<div class="span5">{{ form_label(edit_form.numCarte," Num. de Carte ") }}</div>
{{ form_widget(edit_form.numCarte) }}<span class="alert-danger ">{{ form_errors(edit_form.numCarte) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(edit_form.datePassage," Date de passage ") }}</div>
{{ form_widget(edit_form.datePassage) }}<span class="alert-danger ">{{ form_errors(edit_form.datePassage) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(edit_form.montant," Montant ") }}</div>
{{ form_widget(edit_form.montant) }}<span class="alert-danger ">{{ form_errors(edit_form.montant) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(edit_form.feuilleDeRoute," Feuille De Route ") }}</div>
{{ form_widget(edit_form.feuilleDeRoute) }}<span class="alert-danger ">{{ form_errors(edit_form.feuilleDeRoute) }}</span>
</div>

</fieldset>

</div>
</div>
{{ form_end(edit_form) }}
{% endblock %}

