{% extends '::base.html.twig' %}
{% block title %}Modication|Accueil{% endblock %}
{% block body -%}
    <h1>Modification list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Motif</th>
                <th>Datemaj</th>
                <th>Remarque</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('modification_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.motif }}</td>
                <td>{% if entity.dateMaj %}{{ entity.dateMaj|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.remarque }}</td>
                <td>
                        <div class="col-md-2">
                         <a href="{{ path('modification_show', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonAfficher" title="Afficher" src="{{ asset('bundles/fdradmin/images/apercu.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;
                        
                        <div class="col-md-2">
                         <a href="{{ path('modification_edit', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonModifier" title="Modifier" src="{{ asset('bundles/fdradmin/images/modifier.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;

                        <div class="col-md-2">
                        
                        {{ form_widget(form[entity.id]) }}
                        </div>
                        &nbsp;&nbsp;
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('modification_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
