{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Itineraire list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Depart</th>
                <th>Arrivee</th>
                <th>Remarques</th>
                <th>Disponible</th>
                <th>Champssupp1</th>
                <th>Champssupp2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('itineraire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.depart }}</td>
                <td>{{ entity.arrivee }}</td>
                <td>{{ entity.remarques }}</td>
                <td>{{ entity.disponible }}</td>
                <td>{{ entity.champssupp1 }}</td>
                <td>{{ entity.champssupp2 }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('itineraire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('itineraire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('itineraire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
