{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Secteur list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Libelle</th>
                <th>Depart</th>
                <th>Arrivee</th>
                <th>Remarques</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('secteur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>
                    <ul>
                    {% for item in entity.typePrestations %}
                        <li> {{ item }}</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.depart }}</td>
                <td>{{ entity.arrivee }}</td>
                <td>{{ entity.remarques }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('secteur_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('secteur_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('secteur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
