{% extends '::base.html.twig' %}
{% block title %}Secteur{% endblock %}
{% block body -%}
    <h1>Secteur list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Type</th>
                <th>Libelle</th>
                <th>Clients</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('secteur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.libelle }}</td>
                <td>
                    <td>
                    <ul>
                        {% for item in entity.clients %}
                        <li>
                        {{ item }}
                        </li>
                          {% endfor %}
                    </ul>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('secteur_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('secteur_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('secteur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
