{% extends '::base.html.twig' %}
{% block title %}Manutentionnaire|Accueil{% endblock %}
{% block body -%}
    <h1>Manutentionnaire list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Matricule</th>
                <th>Type</th>
                <th>Cin</th>
                <th>Tel</th>
                <th>Adresse</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manutentionnaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.matricule }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.cin }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.adresse }}</td>
                <td>
                        <div class="col-md-2">
                         <a href="{{ path('manutentionnaire_show', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonAfficher" title="Afficher" src="{{ asset('bundles/fdradmin/images/apercu.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;
                        
                        <div class="col-md-2">
                         <a href="{{ path('manutentionnaire_edit', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonModifier" title="Modifier" src="{{ asset('bundles/fdradmin/images/modifier.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;

                        <div class="col-md-2">
                        
                        {{ form_widget(form[entity.id]) }}
                        </div>
                        &nbsp;&nbsp;
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('manutentionnaire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
