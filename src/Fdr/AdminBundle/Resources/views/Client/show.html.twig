{% extends '::base.html.twig' %}
{% block title %}Client|Show{% endblock %}
{% block body -%}
    <h1>Client</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ entity.tel }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entity.adresse }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ entity.cin }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ entity.fax }}</td>
            </tr>
            <tr>
                <th>Nomentreprise</th>
                <td>{{ entity.nomentreprise }}</td>
            </tr>
            <tr>
                <th>Encompte</th>
                <td>{{ entity.encompte }}</td>
            </tr>
            <tr>
                <th>Clientaffret</th>
                <td>{{ entity.clientaffret }}</td>
            </tr>
            <tr>
                <th>Clientramass</th>
                <td>{{ entity.clientramass }}</td>
            </tr>
            <tr>
                <th>Numcompte</th>
                <td>{{ entity.numcompte }}</td>
            </tr>
            <tr>
                <th>Secteur(s) d'appartenance</th>
                <td>
                    <ul>
                        {% for item in entity.secteurs %}
                        <li>
                        {{ item }}
                        </li>
                          {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('client') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('client_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
