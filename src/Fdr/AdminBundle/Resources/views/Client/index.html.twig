{% extends '::base.html.twig' %}
{% block title %}Client|Accueil{% endblock %}
{% block body -%}
    <h1>Client list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomresponsable</th>
                <th>Prenomresponsable</th>
                <th>Tel</th>
                <th>Adresse</th>
                <th>Cin</th>
                <th>Email</th>
                <th>Fax</th>
                <th>Nomentreprise</th>
                <th>Encompte</th>
                <th>Clientaffret</th>
                <th>Clientramass</th>
                <th>Numcompte</th>
                <th>Secteur(s) d'appartenance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomresponsable }}</td>
                <td>{{ entity.prenomresponsable }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.cin }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.nomentreprise }}</td>
                <td>{{ entity.encompte }}</td>
                <td>{{ entity.clientaffret }}</td>
                <td>{{ entity.clientramass }}</td>
                <td>{{ entity.numcompte }}</td>
                <td>
                    <ul>
                        {% for item in entity.secteurs %}
                        <li>
                        {{ item }}
                        </li>
                          {% endfor %}
                    </ul>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('client_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('client_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('client_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
