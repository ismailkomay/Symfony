{% extends '::base.html.twig' %}
{% block title %}Client|Accueil{% endblock %}
{% block body -%}
    <h1>Client list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Adresse</th>
                <th>Cin</th>
                <th>Email</th>
                <th>Fax</th>
                <th>Nomentreprise</th>
                <th>Encompte</th>
                <th>Clientaffret</th>
                <th>Clientramass</th>
                <th>Numcompte</th>
                <th>Secteur(s)</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.cin }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.nomentreprise }}</td>
                <td>
				{% if entity.encompte %}
                <input type="checkbox" disabled readonly checked />
                {%else %}
                <input type="checkbox" disabled readonly />
                {%endif %}
				</td>
				<td>
				{% if entity.clientaffret %}
                <input type="checkbox" disabled readonly checked />
                {%else %}
                <input type="checkbox" disabled readonly />
                {%endif %}
				</td>
				<td>
				{% if entity.clientramass %}
                <input type="checkbox" disabled readonly checked />
                {%else %}
                <input type="checkbox" disabled readonly />
                {%endif %}
				</td>
                <td>{{ entity.numcompte }}</td>
                <td>
                        <div class="col-md-2">
                         <a href="{{ path('client_show', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonAfficher" title="Afficher" src="{{ asset('bundles/fdradmin/images/apercu.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;
                        
                        <div class="col-md-2">
                         <a href="{{ path('client_edit', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonModifier" title="Modifier" src="{{ asset('bundles/fdradmin/images/modifier.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;

                        <div class="col-md-2">
                        
                        {{ form_widget(form[entity.id]) }}
                        </div>
                        &nbsp;&nbsp;
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('client_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
