{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Vehicule list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tonnage</th>
                <th>Type</th>
                <th>Remorque</th>
                <th>Dispnibilite</th>
                <th>Vidange</th>
                <th>Compteur</th>
                <th>Matricule</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vehicule_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tonnage }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.remorque }}</td>
                <td>{{ entity.disponibilite }}</td>
                <td>{{ entity.vidange }}</td>
                <td>{{ entity.compteur }}</td>
                <td>{{ entity.matricule }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vehicule_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('vehicule_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vehicule_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
