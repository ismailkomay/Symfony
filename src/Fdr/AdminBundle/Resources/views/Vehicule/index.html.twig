{% extends '::base.html.twig' %}
{% block title %}Vehicule|Accueil{% endblock %}
{% block body -%}
    <h1>Vehicule list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tonnage(T)</th>
                <th>Type</th>
                <th>Remorque</th>
                <th>Dispnibilite</th>
                <th>Vidange(Km.)</th>
                <th>Compteur(Km.)</th>
                <th>Matricule</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vehicule_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tonnage }}</td>
                <td>{{ entity.type }}</td>
                <td>
				{% if entity.remorque %}
                <input type="checkbox" disabled readonly checked />
                {%else %}
                <input type="checkbox" disabled readonly />
                {%endif %}
				</td>
                <td>{{ entity.disponibilite }}</td>
                <td>{{ entity.vidange }}</td>
                <td>{{ entity.compteur }}</td>
                <td>{{ entity.matricule }}</td>
                <td>
                        <div class="col-md-2">
                         <a href="{{ path('vehicule_show', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonAfficher" title="Afficher" src="{{ asset('bundles/fdradmin/images/apercu.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;
                        
                        <div class="col-md-2">
                         <a href="{{ path('vehicule_edit', { 'id': entity.id }) }}">
                         <button title="Afficher" type="submit">
                         <img id="inputButtonModifier" title="Modifier" src="{{ asset('bundles/fdradmin/images/modifier.png') }}" />
                         </button>
                         </a> 
                        </div>
                        &nbsp;&nbsp;

                        <div class="col-md-2">
                        
                        {{ form_widget(form[entity.id]) }}
                        </div>
                        &nbsp;&nbsp;
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vehicule_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
