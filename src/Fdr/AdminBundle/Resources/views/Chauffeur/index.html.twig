{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Chauffeur list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Cin</th>
                <th>Adresse</th>
                <th>Dateembauche</th>
                <th>Disponibilite</th>
                <th>Typeconvention</th>
                <th>Etatcontrat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('chauffeur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.cin }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{% if entity.dateembauche %}{{ entity.dateembauche|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.disponibilite }}</td>
                <td>{{ entity.typeconvention }}</td>
                <td>{{ entity.etatContrat }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('chauffeur_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('chauffeur_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('chauffeur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
