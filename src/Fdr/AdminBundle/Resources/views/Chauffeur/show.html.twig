<div class="span5">{{ form_label(form.typeconvention," Type De Convention ") }}</div>
{{ form_widget(form.typeconvention) }}<span class="alert-danger ">{{ form_errors(form.typeconvention) }}</span>
</div>

<div class="row-fluid">
<div class="span5">{{ form_label(form.etatContrat," Etat de contrat ") }}</div>
{{ form_widget(form.etatContrat) }}<span class="alert-danger ">{{ form_errors(form.etatContrat) }}</span>
</div>

</fieldset>
</div>
</div>
</div>
{{ form_end(form) }}
{% endblock %}


